{
  "name": "Chrome Update Tracker - Markdown Documentation",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },

  "mounts": [
    "source=claude-code-config,target=/home/vscode/.claude,type=volume",
    "source=claude-code-bin,target=/home/vscode/.local,type=volume",
    "source=bash-history,target=/home/vscode/.bash_history_persist,type=volume"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "DavidAnson.vscode-markdownlint",
        "yzhang.markdown-all-in-one",
        "bierner.markdown-preview-github-styles"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
        "[markdown]": {
          "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
        }
      }
    },
    "jetbrains": {
      "backend": "IntelliJ IDEA Community"
    }
  },

  "postCreateCommand": "bash -c 'npm install -g markdownlint-cli && .devcontainer/install-claude.sh && .devcontainer/setup-claude-config.sh'",

  "postStartCommand": "if [ -f /home/vscode/.bash_history_persist/bash_history ]; then cp /home/vscode/.bash_history_persist/bash_history /home/vscode/.bash_history; fi",

  "postAttachCommand": "echo 'HISTFILE=/home/vscode/.bash_history_persist/bash_history' >> /home/vscode/.bashrc",

  "remoteEnv": {
    "LANG": "ja_JP.UTF-8",
    "PATH": "/home/vscode/.local/bin:${containerEnv:PATH}"
  }
}
